<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Cai.Ui"
             xmlns:ip="https://github.com/MahApps/IconPacks.Avalonia"
             xmlns:h="clr-namespace:Inanna.Helpers;assembly=Inanna"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cai.Ui.FilesView"
             x:DataType="ui:FilesViewModel">
    <Grid RowDefinitions="Auto,Auto,*">
        <StackPanel Classes="horizontal">
            <Button Command="{Binding CopyCommand}"
                    CommandParameter="{Binding Selected}"
                    Content="{ip:MaterialDesign FileCopy}"
                    IsEnabled="{Binding Selected.Count, Converter={StaticResource IsNotValueConverter}, ConverterParameter={x:Static h:Numbers.Int32Zero}}" />
        </StackPanel>

        <TextBlock Grid.Row="1" Text="{Binding Directory.FullName}" />

        <ScrollViewer Grid.Row="2" Classes="vertical-scroll">
            <ListBox ItemsSource="{Binding Files}" SelectionMode="Multiple" SelectedItems="{Binding Selected}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Classes="align-stretch" Background="Transparent">
                            <Interaction.Behaviors>
                                <BehaviorCollection>
                                    <EventTriggerBehavior EventName="DoubleTapped">
                                        <InvokeCommandAction
                                            Command="{Binding $parent[ui:FilesView].ViewModel.OpenFileCommand}"
                                            CommandParameter="{Binding}" />
                                    </EventTriggerBehavior>
                                </BehaviorCollection>
                            </Interaction.Behaviors>

                            <StackPanel Classes="horizontal">
                                <ip:PackIconMaterialDesign Kind="{Binding Icon}" />
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>
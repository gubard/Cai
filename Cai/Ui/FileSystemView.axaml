<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Cai.Ui"
             xmlns:ip="https://github.com/MahApps/IconPacks.Avalonia"
             xmlns:h="clr-namespace:Inanna.Helpers;assembly=Inanna"
             xmlns:s="clr-namespace:Inanna.Services;assembly=Inanna"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cai.Ui.FileSystemView"
             x:DataType="ui:FileSystemViewModel">
    <Grid RowDefinitions="Auto,Auto,*">
        <StackPanel Classes="horizontal"
                    IsEnabled="{Binding SelectedFiles.Count, Converter={x:Static s:IsNotValueConverter.Instance}, ConverterParameter={x:Static h:Numbers.Int32_0}}">
            <Button Command="{Binding CopyCommand}"
                    CommandParameter="{Binding SelectedFiles}"
                    Content="{ip:MaterialDesign FileCopy}" />
            <Button Command="{Binding DeleteCommand}"
                    Content="{ip:MaterialDesign Delete}" />
        </StackPanel>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            <TextBlock Classes="align-left-center" Text="{Binding Directory.FullName}" />
            <Button Grid.Column="1" Command="{Binding SaveDirectoryCommand}" Content="{ip:MaterialDesign Favorite}" />
        </Grid>

        <ScrollViewer Grid.Row="2" Classes="vertical-scroll">
            <ListBox ItemsSource="{Binding Files}" SelectionMode="Multiple" SelectedItems="{Binding SelectedFiles}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="FileBorder"
                            Classes="align-stretch" 
                                Background="Transparent"
                                DoubleTapped="FileBorderOnDoubleTapped">
                            <Border.ContextFlyout>
                                <MenuFlyout>
                                    <MenuItem Header="{DynamicResource Lang.CopyFullPath}"
                                              CommandParameter="{Binding}"
                                              Command="{Binding $parent[ui:FileSystemView].ViewModel.CopyFullPathCommand}" />
                                </MenuFlyout>
                            </Border.ContextFlyout>

                            <StackPanel Classes="horizontal">
                                <ip:PackIconMaterialDesign Kind="{Binding Icon}" />
                                <TextBlock Text="{Binding Name}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>
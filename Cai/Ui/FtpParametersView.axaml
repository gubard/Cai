<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Cai.Ui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cai.Ui.FtpParametersView"
             x:DataType="ui:FtpParametersViewModel">
    <StackPanel>
        <TextBlock Classes="field" Text="{DynamicResource Lang.Name}" />
        <TextBox x:Name="TextBoxName" Text="{Binding Name}" KeyDown="TextBoxNameOnKeyDown"/>
        <TextBlock Classes="field" Text="{DynamicResource Lang.Host}" />
        <TextBox x:Name="TextBoxHost" Text="{Binding Host}" KeyDown="TextBoxHostOnKeyDown" />
        <TextBlock Classes="field" Text="{DynamicResource Lang.Login}" />
        <TextBox x:Name="TextBoxLogin" Text="{Binding Login}" KeyDown="TextBoxLoginOnKeyDown" />
        <TextBlock Classes="field" Text="{DynamicResource Lang.Password}" />
        <TextBox x:Name="TextBoxPassword" Classes="password" Text="{Binding Password}" KeyDown="TextBoxPasswordOnKeyDown" />
        <TextBlock Classes="field" Text="{DynamicResource Lang.Path}" />
        <TextBox x:Name="TextBoxPath" Text="{Binding Path}" />
    </StackPanel>
</UserControl>
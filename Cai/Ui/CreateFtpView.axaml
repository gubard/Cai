<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Cai.Ui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Cai.Ui.CreateFtpView"
             x:DataType="ui:CreateFtpViewModel">
    <StackPanel>
        <TextBlock Classes="field" Text="{DynamicResource Lang.Name}" />
        <TextBox Text="{Binding Name}" />
        <TextBlock Classes="field" Text="{DynamicResource Lang.Host}" />
        <TextBox Text="{Binding Host}" />
        <TextBlock Classes="field" Text="{DynamicResource Lang.Login}" />
        <TextBox Text="{Binding Login}" />
        <TextBlock Classes="field" Text="{DynamicResource Lang.Password}" />
        <TextBox Text="{Binding Password}" />
    </StackPanel>
</UserControl>